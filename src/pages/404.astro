---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Page Not Found - EventHub">
  <div class="min-h-[70vh] flex items-center justify-center px-4">
    <div class="text-center">
      <div class="text-9xl font-bold text-indigo-600 mb-4">404</div>
      <h1 class="text-4xl font-bold text-gray-800 mb-6">Page Not Found</h1>
      <p class="text-xl text-gray-600 mb-8 max-w-md mx-auto">
        The page you're looking for doesn't exist or has been moved.
      </p>
      <div class="space-x-4">
        <a href="/" class="btn-primary">
          <i class="fas fa-home mr-2"></i> Go Home
        </a>
        <a href="/events" class="px-6 py-3 border-2 border-indigo-600 text-indigo-600 hover:bg-indigo-50 rounded-lg font-semibold transition duration-300">
          Browse Events
        </a>
      </div>
    </div>
  </div>
</Layout>