---
import Layout from "../../layouts/Layout.astro";
import EventCard from "../../components/EventCard.astro";
import eventsData from "../../data/events.json";

// Define getStaticPaths to generate all possible paths
export async function getStaticPaths() {
  return eventsData.events.map((event) => ({
    params: { id: event.id.toString() },
    props: { event } // Pass event data to the page
  }));
}

// Receive the event prop from getStaticPaths
const { event } = Astro.props;

// Handle case where event is not found (should not happen with getStaticPaths)
if (!event) {
  // This fallback page will show if someone visits an invalid ID
  return Astro.redirect("/404");
}

const formatDate = (dateString) => {
  const date = new Date(dateString);
  return date.toLocaleDateString('en-US', { 
    weekday: 'long',
    month: 'long', 
    day: 'numeric',
    year: 'numeric',
    hour: '2-digit',
    minute: '2-digit'
  });
};

// Get related events (excluding current event)
const relatedEvents = eventsData.events
  .filter(e => e.id !== event.id)
  .slice(0, 3);
---

<Layout title={`${event.title} - EventHub`}>
  <div class="pt-8 pb-20">
    <div class="container mx-auto px-4">
      <a href="/events" class="inline-flex items-center text-indigo-600 hover:text-indigo-700 mb-8">
        <i class="fas fa-arrow-left mr-2"></i> Back to Events
      </a>
      
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Event Details -->
        <div>
          <div class="mb-6">
            <span class={`px-4 py-2 rounded-full text-sm font-semibold ${
              event.category === 'concert' ? 'bg-purple-100 text-purple-700' :
              event.category === 'sports' ? 'bg-green-100 text-green-700' :
              event.category === 'conference' ? 'bg-blue-100 text-blue-700' :
              'bg-yellow-100 text-yellow-700'
            }`}>
              {event.category.charAt(0).toUpperCase() + event.category.slice(1)}
            </span>
          </div>
          
          <h1 class="text-4xl font-bold text-gray-800 mb-6">{event.title}</h1>
          
          <div class="space-y-6 mb-8">
            <div class="flex items-start">
              <div class="w-10 h-10 bg-indigo-100 rounded-lg flex items-center justify-center mr-4">
                <i class="fas fa-calendar-alt text-indigo-600"></i>
              </div>
              <div>
                <p class="font-semibold text-gray-800">Date & Time</p>
                <p class="text-gray-600">{formatDate(event.date)}</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="w-10 h-10 bg-indigo-100 rounded-lg flex items-center justify-center mr-4">
                <i class="fas fa-map-marker-alt text-indigo-600"></i>
              </div>
              <div>
                <p class="font-semibold text-gray-800">Location</p>
                <p class="text-gray-600">{event.location}</p>
                <p class="text-gray-500 text-sm mt-1">{event.venue}</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="w-10 h-10 bg-indigo-100 rounded-lg flex items-center justify-center mr-4">
                <i class="fas fa-user-tie text-indigo-600"></i>
              </div>
              <div>
                <p class="font-semibold text-gray-800">Organizer</p>
                <p class="text-gray-600">{event.organizer}</p>
              </div>
            </div>
          </div>
          
          <div class="mb-8">
            <h3 class="text-2xl font-bold text-gray-800 mb-4">About This Event</h3>
            <p class="text-gray-700 leading-relaxed">{event.description}</p>
          </div>
          
          <div class="mb-8">
            <h3 class="text-2xl font-bold text-gray-800 mb-4">Tags</h3>
            <div class="flex flex-wrap gap-2">
              {event.tags && event.tags.map((tag) => (
                <span class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm">
                  {tag}
                </span>
              ))}
            </div>
          </div>
        </div>
        
        <!-- Ticket Purchase -->
        <div>
          <div class="sticky top-24">
            <div class="card border-2 border-indigo-200">
              <div class="p-8">
                <div class="text-center mb-8">
                  <span class="text-5xl font-bold text-gray-800">${event.price}</span>
                  <p class="text-gray-600 mt-2">per ticket</p>
                </div>
                
                <div class="mb-8">
                  <div class="flex items-center justify-between mb-4">
                    <span class="text-gray-700">Available Seats</span>
                    <span class="font-semibold">{event.availableSeats} left</span>
                  </div>
                  <div class="w-full bg-gray-200 rounded-full h-2">
                    <div 
                      class="bg-green-500 h-2 rounded-full" 
                      style={`width: ${Math.min((event.availableSeats / 250) * 100, 100)}%`}
                    ></div>
                  </div>
                </div>
                
                <div class="space-y-6">
                  <div>
                    <label class="block text-gray-700 mb-2 font-medium">
                      Number of Tickets
                    </label>
                    <div class="flex items-center border border-gray-300 rounded-lg">
                      <button type="button" class="px-4 py-3 text-gray-600 hover:text-gray-800 decrement-btn">
                        <i class="fas fa-minus"></i>
                      </button>
                      <input 
                        type="number" 
                        value="1" 
                        min="1" 
                        max={event.availableSeats}
                        class="w-16 text-center py-3 border-0 focus:outline-none focus:ring-0 ticket-quantity"
                      />
                      <button type="button" class="px-4 py-3 text-gray-600 hover:text-gray-800 increment-btn">
                        <i class="fas fa-plus"></i>
                      </button>
                    </div>
                  </div>
                  
                  <div>
                    <label class="block text-gray-700 mb-2 font-medium">
                      Ticket Type
                    </label>
                    <select class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:border-indigo-500 ticket-type">
                      <option>General Admission</option>
                      <option>VIP Access</option>
                      <option>Early Bird</option>
                    </select>
                  </div>
                  
                  <div class="bg-gray-50 p-4 rounded-lg">
                    <div class="flex justify-between mb-2">
                      <span class="text-gray-600">Subtotal</span>
                      <span class="font-semibold ticket-subtotal">${event.price}</span>
                    </div>
                    <div class="flex justify-between mb-2">
                      <span class="text-gray-600">Service Fee</span>
                      <span class="font-semibold">$5.00</span>
                    </div>
                    <div class="border-t pt-2 mt-2">
                      <div class="flex justify-between">
                        <span class="text-lg font-bold">Total</span>
                        <span class="text-2xl font-bold text-indigo-600 ticket-total">${event.price + 5}</span>
                      </div>
                    </div>
                  </div>
                  
                  <button class="btn-primary w-full py-4 text-lg checkout-btn">
                    <i class="fas fa-lock mr-2"></i> Proceed to Checkout
                  </button>
                  
                  <p class="text-center text-gray-500 text-sm">
                    <i class="fas fa-shield-alt mr-1"></i>
                    100% Secure Booking â€¢ 24/7 Customer Support
                  </p>
                </div>
              </div>
            </div>
            
            <div class="mt-6 text-center">
              <button type="button" class="text-gray-600 hover:text-gray-800 mr-6">
                <i class="far fa-heart text-xl"></i>
              </button>
              <button type="button" class="text-gray-600 hover:text-gray-800 mr-6">
                <i class="fas fa-share-alt text-xl"></i>
              </button>
              <button type="button" class="text-gray-600 hover:text-gray-800">
                <i class="fas fa-flag text-xl"></i>
              </button>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Related Events -->
      {relatedEvents.length > 0 && (
        <div class="mt-20">
          <h2 class="text-3xl font-bold text-gray-800 mb-8">You Might Also Like</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {relatedEvents.map((relatedEvent) => (
              <EventCard event={relatedEvent} />
            ))}
          </div>
        </div>
      )}
    </div>
  </div>

  <script>
  // Ticket quantity functionality
  document.addEventListener('DOMContentLoaded', function() {
    // Get data from data attributes
    const priceElement = document.querySelector('[data-ticket-price]');
    const seatsElement = document.querySelector('[data-available-seats]');
    
    const ticketPrice = priceElement ? parseFloat(priceElement.dataset.ticketPrice) : 99;
    const availableSeats = seatsElement ? parseInt(seatsElement.dataset.availableSeats) : 45;
    
    const quantityInput = document.querySelector('.ticket-quantity');
    const decrementBtn = document.querySelector('.decrement-btn');
    const incrementBtn = document.querySelector('.increment-btn');
    const subtotalElement = document.querySelector('.ticket-subtotal');
    const totalElement = document.querySelector('.ticket-total');
    const checkoutBtn = document.querySelector('.checkout-btn');
    
    function updatePrice() {
      const quantity = parseInt(quantityInput.value) || 1;
      const subtotal = ticketPrice * quantity;
      const total = subtotal + 5; // Service fee
      
      subtotalElement.textContent = `$${subtotal}`;
      totalElement.textContent = `$${total}`;
    }
    
    // Decrement button
    decrementBtn.addEventListener('click', () => {
      let quantity = parseInt(quantityInput.value) || 1;
      if (quantity > 1) {
        quantity--;
        quantityInput.value = quantity;
        updatePrice();
      }
    });
    
    // Increment button
    incrementBtn.addEventListener('click', () => {
      let quantity = parseInt(quantityInput.value) || 1;
      if (quantity < availableSeats) {
        quantity++;
        quantityInput.value = quantity;
        updatePrice();
      }
    });
    
    // Input change
    quantityInput.addEventListener('change', () => {
      let quantity = parseInt(quantityInput.value) || 1;
      
      if (quantity < 1) {
        quantity = 1;
      } else if (quantity > availableSeats) {
        quantity = availableSeats;
        alert(`Only ${availableSeats} seats available`);
      }
      
      quantityInput.value = quantity;
      updatePrice();
    });
    
    // Checkout button
    checkoutBtn.addEventListener('click', function(e) {
      e.preventDefault();
      const quantity = parseInt(quantityInput.value) || 1;
      const ticketType = document.querySelector('.ticket-type').value;
      
      // In a real app, you would redirect to checkout or show a modal
      alert(`Added ${quantity} ${ticketType} ticket(s) to cart!\nTotal: $${(ticketPrice * quantity + 5).toFixed(2)}`);
      
      // You would typically:
      // 1. Add to cart/session
      // 2. Redirect to checkout page
      // window.location.href = `/checkout?eventId=${event.id}&quantity=${quantity}&type=${ticketType}`;
    });
    
    // Initialize price
    updatePrice();
  });
</script>
</Layout>

<style is:global>
  .card {
    background-color: white;
    border-radius: 0.75rem;
    box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1);
    overflow: hidden;
    transition: box-shadow 300ms;
  }
  
  .card:hover {
    box-shadow: 0 20px 25px -5px rgb(0 0 0 / 0.1);
  }
</style>