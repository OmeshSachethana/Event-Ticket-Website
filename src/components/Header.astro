---
const navLinks = [
  { name: 'Home', href: '/' },
  { name: 'Events', href: '/events' },
  { name: 'My Tickets', href: '/tickets' },
  { name: 'About', href: '/about' },
];
---

<header class="sticky top-0 z-50 bg-white shadow-md">
  <div class="container mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-2">
        <div class="w-10 h-10 bg-indigo-600 rounded-lg flex items-center justify-center">
          <span class="text-white font-bold text-xl">ET</span>
        </div>
        <span class="text-2xl font-bold text-gray-800">EventHub</span>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center space-x-8">
        {navLinks.map((link) => (
          <a 
            href={link.href} 
            class="text-gray-600 hover:text-indigo-600 font-medium transition duration-300 hover:scale-105"
          >
            {link.name}
          </a>
        ))}
        <a href="/tickets" class="btn-primary">
          <i class="fas fa-ticket-alt mr-2"></i>My Tickets
        </a>
      </nav>

      <!-- Mobile menu button -->
      <button id="menu-btn" class="md:hidden text-gray-600">
        <i class="fas fa-bars text-2xl"></i>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4">
      <div class="flex flex-col space-y-4">
        {navLinks.map((link) => (
          <a 
            href={link.href} 
            class="text-gray-600 hover:text-indigo-600 font-medium py-2 px-4 rounded-lg hover:bg-gray-100"
          >
            {link.name}
          </a>
        ))}
        <a href="/tickets" class="btn-primary text-center">
          <i class="fas fa-ticket-alt mr-2"></i>My Tickets
        </a>
      </div>
    </div>
  </div>
</header>