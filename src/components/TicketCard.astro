---
const { ticket } = Astro.props;
const formatDate = (dateString) => {
  const date = new Date(dateString);
  return date.toLocaleDateString('en-US', { 
    month: 'short', 
    day: 'numeric',
    year: 'numeric'
  });
};
---

<div class="card border-l-4 border-l-emerald-500">
  <div class="p-6">
    <div class="flex items-start justify-between mb-4">
      <div>
        <h3 class="text-xl font-bold text-gray-800">{ticket.eventTitle}</h3>
        <p class="text-gray-600 mt-1">{ticket.eventLocation}</p>
      </div>
      <span class="px-3 py-1 bg-emerald-100 text-emerald-700 rounded-full text-sm font-semibold">
        {ticket.status}
      </span>
    </div>
    
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
      <div>
        <p class="text-sm text-gray-500">Date</p>
        <p class="font-semibold">{formatDate(ticket.eventDate)}</p>
      </div>
      <div>
        <p class="text-sm text-gray-500">Ticket #</p>
        <p class="font-semibold font-mono">{ticket.ticketNumber}</p>
      </div>
      <div>
        <p class="text-sm text-gray-500">Quantity</p>
        <p class="font-semibold">{ticket.quantity} tickets</p>
      </div>
      <div>
        <p class="text-sm text-gray-500">Total Paid</p>
        <p class="font-semibold text-lg">${ticket.totalAmount}</p>
      </div>
    </div>
    
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-4">
        <a 
          href="#" 
          class="text-indigo-600 hover:text-indigo-700 font-medium flex items-center"
        >
          <i class="fas fa-download mr-2"></i> Download Ticket
        </a>
        <a 
          href="#" 
          class="text-gray-600 hover:text-gray-800 font-medium flex items-center"
        >
          <i class="fas fa-share-alt mr-2"></i> Share
        </a>
      </div>
      <button class="text-red-600 hover:text-red-700 font-medium">
        <i class="fas fa-times mr-2"></i> Cancel
      </button>
    </div>
  </div>
</div>