---
import EventCard from "./EventCard.astro";
const events = [
  {
    id: 1,
    title: "Summer Music Festival",
    description: "The biggest music festival of the year featuring top artists from around the world.",
    date: "2024-06-15T18:00:00",
    location: "Central Park, NYC",
    price: 99,
    category: "concert",
    image: "https://images.unsplash.com/photo-1533174072545-7a4b6ad7a6c3?w=800&auto=format&fit=crop",
    availableSeats: 45
  },
  {
    id: 2,
    title: "Tech Innovators Conference",
    description: "Join leading tech innovators and entrepreneurs for a day of inspiration and networking.",
    date: "2024-07-20T09:00:00",
    location: "Convention Center, SF",
    price: 149,
    category: "conference",
    image: "https://images.unsplash.com/photo-1540575467063-178a50c2df87?w-800&auto=format&fit=crop",
    availableSeats: 120
  },
  {
    id: 3,
    title: "Championship Basketball Finals",
    description: "Watch the season finals between the top two teams in an epic showdown.",
    date: "2024-05-30T20:00:00",
    location: "Madison Square Garden",
    price: 89,
    category: "sports",
    image: "https://images.unsplash.com/photo-1546519638-68e109498ffc?w-800&auto=format&fit=crop",
    availableSeats: 200
  }
];
---

<section id="featured" class="py-16">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold text-gray-800 mb-4">
        Featured <span class="text-indigo-600">Events</span>
      </h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Discover our handpicked selection of must-attend events
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {events.map((event) => (
        <EventCard event={event} />
      ))}
    </div>
    
    <div class="text-center mt-12">
      <a href="/events" class="btn-primary inline-flex items-center">
        View All Events
        <i class="fas fa-arrow-right ml-2"></i>
      </a>
    </div>
  </div>
</section>